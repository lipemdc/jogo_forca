print("OLÁ, SEJA BEM VINDO AO JOGO DA FORCA\nCRIADO POR LUIZ FELIPE E LUÍS EDUARDO.\n")

import random

confirmar = False

tema = int(input("PRIMEIO, DENTRE ESSES TEMAS QUAL VOCÊ QUER JOGAR?\n1: TIMES DE FUTEBOL\n2: FRUTAS\n3: CORES\n4: ANIMAIS\n5: ALEATORIO "))

while confirmar == False:
    
    times = ["flamengo", "botafogo", "fluminense", "figueirense","icasa",]
    frutas = ["banana", "abacate", "melancia", "lichia", "acerola", "pitaia"]
    cores = ["vermelho", "azul"]
    animais = ["macaco", "baleia"]
    
    if tema == 1:
        palavra = random.choice(times)
        
        print(f"MUITO BEM, O SEU TEMA É TIME DE FUTEBOL")
        
        confirmar = True
        
    elif tema == 2:
        palavra = random.choice(frutas)
        
        print("MUITO BEM, O SEU TEMA É FRUTAS")
        
        confirmar = True
        
    elif tema == 3:
        palavra = random.choice(cores)
        
        print("MUITO BEM, O SEU TEMA É CORES")
        
        confirmar = True
        
    elif tema == 4:
        palavra = random.choice(animais)
        
        print("MUITO BEM, O SEU TEMA É ANIMAIS")
        
        confirmar = True
        
    elif tema == 5:
        tema = random.randint(1, 4)

        
    else:
        print("PORFAVOR ESCOLHA UM NUMERO DE 1 A 5")
        
        tema = int(input())
        

vitoria = 0
vidas = 5
chute= " "
letras_chutadas = []
letras_acertadas = 0 

while vidas > 0:

    vitoria = 0

    chute = input("Chute uma letra: ").lower()
    letras_chutadas.append(chute)

    if chute.lower() not in palavra and vidas != 1:
        vidas -= 1
        print(f"ERROU. CUIDADO, VOCÊ AGORA SÓ TEM {vidas} VIDAS")
    elif vidas == 1:
        break

    for i in palavra:
        if i in letras_chutadas :
            print(i, end=" ")

        else:
            print("_", end=" ")

    for i in palavra:
        if not i in letras_chutadas:
            vitoria += 1

    if vitoria == 0:
        print("YOU WIN")
        
        
        vitoria = True
        break
        
        
        
if vitoria != True:
    print(f"QUE PENA, VOCÊ PERDEU. SUA PALAVRA ERA: {palavra}")